<!DOCTYPE html>
<html>
<head>
  <title>Manage Products</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body class="container mt-4">
  <h2>Products</h2>

  <form method="POST" action="/admin/products" class="mb-3">
    <input type="text" name="name" placeholder="Product Name" required class="form-control mb-2">
    <input type="number" name="price" placeholder="Price" required class="form-control mb-2">
    <select name="category" class="form-control mb-2">
      <% cats.forEach(c => { %>
        <option value="<%= c._id %>"><%= c.name %></option>
      <% }) %>
    </select>
    <button type="submit" class="btn btn-primary">Add Product</button>
  </form>

  <ul class="list-group">
    <% products.forEach(p => { %>
      <li class="list-group-item">
        <%= p.name %> - $<%= p.price %> (Category: <%= p.category?.name %>)
      </li>
    <% }) %>
  </ul>

  <a href="/admin/dashboard" class="btn btn-secondary mt-3">Back</a>
</body>
</html>
